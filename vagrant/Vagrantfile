# -*- mode: ruby -*-
# vi: set ft=ruby :

# Customize VM resources
VM_CPUS = "4"
VM_MEMORY = "2048" # MB
VM_NAME = "OrionU16"

# Customize SSH config
ssh_username = "jinliang"
ssh_private_key_path = "/Users/jinliangwei/.ssh/id_rsa"

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|
    config.vm.box = "ubuntu/xenial64"

    config.vm.provider :virtualbox do |vb|
    vb.customize [ "modifyvm", :id,
    "--memory", VM_MEMORY,
    "--name", VM_NAME,
    "--nicspeed1", 1000000,
    "--nicspeed2", 1000000,
    "--ioapic", "on",
    "--cpus", VM_CPUS ]
    end

    # SSH
    config.ssh.forward_agent = true
    config.ssh.forward_x11 = true
#    config.ssh.username = ssh_username
#    config.ssh.private_key_path = ssh_private_key_path
#    config.ssh.password = "19881202jl"
    config.vm.provision :shell, path: "../install_dependencies.sh"
end
